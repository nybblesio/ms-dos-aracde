;ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
;³ _bank_new                                         ³
;ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ
_bank_new:
    struc [bp]
                    dw ?
        bk_blk_max  db ?
        bk_type     db ?
    ends

    mov     bp, sp
    mov     bh, bk_type
    mov     bl, bk_blk_max
    cs mov  es, bank_hdrs_seg
    mov     bp, bank_hdrs_off
    xor     ax, ax
    mov     al, bl
    mov     cx, type bank_block
    mul     cx
    mov     cx, 16
    div     cx
    inc     ax
    mov     cx, ax
    mm_resv cx, offset bank_temp_ptr
    cs mov  ax, bank_temp_ptr
    mm_set  ax, 0, cx, 0
    es mov  md_blk_seg, ax
    es mov  md_blk_off, 0
    es mov  md_blk_max, bl
    cs mov  cl, bank_hdr_id
    es mov  md_id, cl
    inc     cl
    cs mov  bank_hdr_id, cl
    es mov  md_type, bh
    es mov  md_flags, F_BANK_BLOCK_DIRTY
    cs mov  ax, bp
    cmp     bp, SZ_BANK_HDRS
    jae     >l0
    cs add  bp, type bank_block
    cs mov  bank_hdrs_off, bp
l0: ret

bk_new macro
    push    bp, cx, bx
    push    #1 by #2
    call    _bank_new
    add     sp, 2
    pop     bx, cx, bp
#em

;ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
