    pop     di, cx, ax, bp, es
#em

tm_new macro
    tm_free
    es mov  tm_callback, #1
    es mov  tm_frames, #2
    es mov  tm_count, #2
    es mov  tm_flags, F_TIMER_ENABLED
#em

;ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
