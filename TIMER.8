;ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ
game_timer_isr:
    cli
    push    es, ax
    cs mov  ax, w[fast_tick + 2]
    add     ax, 1
    cs adc  w[fast_tick], ax
    cs dec  old_isr_tick
    cs cmp  old_isr_tick, 0
    je      >l0
    tm_upd
    mov     al, 020h
    out     020h, al
    jmp     >l1
l0: cs mov  old_isr_tick, 3
    pushf
    cs call dword ptr timer_old_isr
l1: pop     ax, es
    sti
    iret

