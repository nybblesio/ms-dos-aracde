even

state               db  STATE_NO_FILE
exit_code           db  ?
temp_ptr            dw  ?
file_label:         db  'BANK FILE:'
editor_label:       db  'EDITOR:'
banks_label:        db  'BANKS:'
new_label:          db  'NEW'
load_label:         db  'LOAD'
save_label:         db  'SAVE'
add_label:          db  'ADD'
remove_label:       db  'REMOVE'
clear_label:        db  'CLEAR'
tool_title:         db  'TILED'
tool_version:       db  'v1.0'
tool_author:        db  'JEFF PANICI'
tool_copyright:     db  '(C) 2017 NYBBLES.IO'

state_action struc [bp]
    state_code      db ?
    state_callback  dw ?
ends

state_actions:
    db  STATE_NO_FILE
    dw  no_file

    db  STATE_NO_BANK
    dw  no_bank

    db  STATE_TILE_BANK
    dw  tile_bank

    db  STATE_SPR_BANK
    dw  spr_bank

    db  0
    dw  0

inp_action struc [bp]
    inp_scan_code   db ?
    inp_callback    dw ?
ends

inp_actions:
    db  KEY_LEFT
    dw  cur_left

    db  KEY_RIGHT
    dw  cur_right

    db  KEY_UP
    dw  cur_up

    db  KEY_DOWN
    dw  cur_down

    db  0
    dw  0

;ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
;³ main tool engine                                  ³
;ÃÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ´
