;ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ
_update_timers:
    mov     cx, 32
    cs mov  es, ctrl_ram_ptr
    es mov  bp, offset c_timers
l0: es mov  al, tm_flags
    test    al, F_TIMER_ENABLED
    je      >l2
    es mov  di, tm_callback
    es cmp  di, 0
    je      >l2
    es cmp  tm_count, 0
    jg      >l1
    and     al, not F_TIMER_ENABLED
    or      al, F_TIMER_READY
    es mov  tm_flags, al
    jmp     >l2
l1: es dec  tm_count
l2: dec     cx
    cmp     cx, 0
    je      >l3
    add     bp, type timer
    jmp     l0
l3: ret

tm_upd macro
    push    es, bp, ax, cx, di
    call    _update_timers
    pop     di, cx, ax, bp, es
#em

;ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
