;ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ
no_file:
    ret

no_bank:
    ret

tile_bank:
    ret

spr_bank:
    frect   17 by 43, 144 by 144, 8 by 0
    rect    42 by 16, 146 by 145, 0 by 0
    ret

cur_right:
    ret

cur_down:
    ret

cur_left:
    ret

cur_up:
    ret

;
; allocate memory
;
allocate:
    alloc   CTRL_RAM_SIZE / 16,  offset ctrl_ram_ptr
    memset  ctrl_ram_ptr, 0, CTRL_RAM_SIZE, 0

    mov     es, ctrl_ram_ptr
    mov     bp, 0

    alloc   TILE_BANK_SIZE / 16, offset temp_ptr
    memset  temp_ptr, 0, TILE_BANK_SIZE, 024h
    es_movm c_bg_tiles, temp_ptr

    alloc   TILE_BANK_SIZE / 16, offset temp_ptr
    memset  temp_ptr,   0, TILE_BANK_SIZE, 07fh
    es_movm c_spr_tiles, temp_ptr

    alloc   VRAM_SIZE / 16, offset back_buffer_ptr
    memset  back_buffer_ptr, 0, VRAM_SIZE, 0

    ret

;
; initialize everything
;
init:
    call    allocate
    mode_13
    mode_q
    call    mouse_init
    call    init_keyboard_isr
    call    init_timer_isr
    ret

;
; update the tool state
;
update:
    fire_timers
    cs mov  bp, inp_actions
    mov     cx, 4
p0: next_key
    cmp     al, 0
    je      >p4
    cmp     al, KEY_ESC
    je      >p5
    dec     cx
    cmp     cx, 0
    jz      >p4
p1: cs mov  bl, inp_scan_code
    cmp     bl, 0
    jnz     >p2
    cs mov  bp, inp_actions
    jmp     p0
p2: cmp     al, bl
    je      >p3
    cs add  bp, type inp_action
    jmp     p1
p3: cs call [inp_callback]
    jmp     p0
p4: ret
p5: jmp     exit

;
; render the video scene
;   bg 1
;   fg
;   bg 2
;   text
draw:
    wait_novblank
    wait_vblank

    clear

    frect   0 by 0, 38 by 256, 8 by 0
    vline   38 by 0, 256, 0 by 0

    string  offset micro_font, 10, file_label, 2 by 42, 7 by 0, 1
    string  offset micro_font, 7, editor_label, 2 by 206, 7 by 0, 1

    string  offset micro_font, 5, tool_title,  2 by 2, 0 by 0, 1
    string  offset micro_font, 5, tool_title,  3 by 3, 7 by 0, 1

    string  offset micro_font, 4, tool_version, 8 by 12, 0 by 0, 0
    string  offset micro_font, 4, tool_version, 9 by 13, 7 by 0, 0

    hline   0 by 20, 38, 0 by 0
    frect   21 by 0, 38 by 9, 9 by 0
    hline   0 by 30, 38, 0 by 0
    string  offset micro_font, 3, new_label, 23 by 8, 7 by 0, 1

    hline   0 by 32, 38, 0 by 0
    frect   33 by 0, 38 by 9, 9 by 0
    hline   0 by 42, 38, 0 by 0
    string  offset micro_font, 4, load_label, 35 by 7, 7 by 0, 1

    hline   0 by 44, 38, 0 by 0
    frect   45 by 0, 38 by 9, 9 by 0
    hline   0 by 54, 38, 0 by 0
    string  offset micro_font, 4, save_label, 47 by 7, 7 by 0, 1

    hline   38 by 189, 218, 0 by 0
    frect   190 by 38, 218 by 9, 8 by 0
    hline   38 by 198, 218, 0 by 0
    string  offset micro_font, 6, banks_label, 191 by 4, 7 by 0, 1

    hline   0 by 200, 38, 0 by 0
    frect   201 by 0, 38 by 9, 9 by 0
    hline   0 by 210, 38, 0 by 0
    string  offset micro_font, 3, add_label, 203 by 10, 7 by 0, 1

    hline   0 by 212, 38, 0 by 0
    frect   213 by 0, 38 by 9, 9 by 0
    hline   0 by 222, 38, 0 by 0
    string  offset micro_font, 6, remove_label, 215 by 2, 7 by 0, 1

    hline   0 by 224, 38, 0 by 0
    frect   225 by 0, 38 by 9, 9 by 0
    hline   0 by 234, 38, 0 by 0
    string  offset micro_font, 5, clear_label, 227 by 5, 7 by 0, 1

    mouse
    flip

    ret

;
; entry point
;
start:
    call    init

;
; the heart
;
tool_loop:
    cs call update
    cs call draw
    jmp     tool_loop

;
; the end
;
exit:
    call    reset_timer_isr
    call    reset_keyboard_isr
    mode_03
    mov     ah, 04ch
    mov     al, exit_code
    int     21h
    ret
