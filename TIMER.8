;ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ
_get_free_timer:
    mov     cx, 32
    cs mov  es, ctrl_ram_ptr
    es mov  bp, offset c_timers
l0: es cmp  tm_callback, 0
    jz      >l2
    cmp     cx, 0
    jz      >l1
    dec     cx
    add     bp, type timer
    jmp     l0
l1: mov     bp, 0
l2: ret

tm_free macro
