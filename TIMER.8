_fire_timers:
    mov     cx, 32
    cs mov  es, ctrl_ram_ptr
    es mov  bp, offset c_timers
l0: es mov  al, tm_flags
    test    al, F_TIMER_READY
    jz      >l1
    es mov  di, tm_callback
    push    es, bp, ax, cx, di
    cs call di
    pop     di, cx, ax, bp, es
l1: dec     cx
    cmp     cx, 0
    je      >l2
    add     bp, type timer
    jmp     l0
l2: ret

