;ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ
_btn_draw:
    mov     ax, btn_flags
    test    ax, F_BTN_ENABLED
    setnz   cl
    test    ax, F_BTN_TXTONLY
    setnz   ch
    cmp     ch, 1
    jz      >l0
    push    cx
    mov     bx, btn_pos
    mov     cx, btn_size
    mov     dx, btn_bg_clr
    vg_fbox bx, cx, dx
    mov     dx, btn_bdr_clr
    vg_box  bx, cx, dx
    pop     cx
l0: mov     dx, 8 by 0
    cmp     cl, 1
    jnz     >l1
    mov     dx, 7 by 0
l1: mov     si, btn_txt
    mov     bx, btn_txt_pos
    vg_str  micro_font, si, bx, dx, 1
    ret

;ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
